{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-white">Listado de partidas</h1>
    {% if listado %}
    <table class="table table-stripped">
            <thead>
                <tr>
                    <th>
                        Partida
                    </th>
                    <th>
                        Estado
                    </xth>
                    <th>
                        Ganador
                    </th>
                </tr>
            </thead>
            <tbody>
    {% for partida in listado %}
                <tr>
                    <td class="text-center">
                        {{ partida.id }}
                    </td>
                    <td>
                        {{ partida.estado }}
                    </td>
                    <td>
                        {% if partida.ganador == 0 %}
                            <a href="/partida/{{ partida.id }}" class="btn btn-outline-primary badge pull-right">Continuar partida</a>
                        {% else %}
                                {% if (partida.ganador == 3) %}
                                    No hubo ganador
                                {% else %}
                                    {{ partida.ganador }}
                                {% endif %}
                            <a href="/partida/{{ partida.id }}" class="btn btn-outline-secondary badge pull-right">Ver resultado</a>
                        {% endif %}
                    </td>
                </tr>
    {% endfor %}
        </tbody>
    </table>
    {% else %}
        <a href="/nuevo" class="btn btn-primary">Nueva partida</a>
    {% endif %}
</div>
{% endblock %}
