{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Listado de partidas</h1>
    {% if listado %}
    {% for partida in listado %}
        <table class="table table-stripped">
            <thead>
                <tr>
                    <th>
                        Partida
                    </th>
                    <th>
                        Estado
                    </xth>
                    <th>
                        Ganador
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        {{ partida.id }}
                    </td>
                    <td>
                        {{ partida.estado }}
                    </td>
                    <td>
                        {% if partida.ganador == 0 %}
                            <a href="/partida/{{ partida.id }}" class="btn btn-outline-primary badge">Continuar partida</a>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    {% endfor %}
    {% else %}
        <a href="/nuevo" class="btn btn-primary">Nueva partida</a>
    {% endif %}
</div>
{% endblock %}
